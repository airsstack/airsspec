{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DAA Artifact Schema",
  "description": "Schema for validating Domain Architecture Analysis artifact frontmatter",
  "type": "object",
  "required": ["id", "title", "version", "status", "author", "created_at", "uow_ref"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the DAA document (e.g., DAA-UOW-001)"
    },
    "title": {
      "type": "string",
      "description": "Title of the DAA document"
    },
    "version": {
      "type": "string",
      "description": "Version of the DAA document (e.g., '1.0')"
    },
    "status": {
      "type": "string",
      "description": "Status of the DAA (draft, approved, deprecated)",
      "enum": ["draft", "approved", "deprecated"]
    },
    "author": {
      "type": "string",
      "description": "Author who created the DAA"
    },
    "created_at": {
      "type": "string",
      "description": "Creation date in ISO 8601 format (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "uow_ref": {
      "type": "string",
      "description": "Reference to the parent Unit of Work"
    }
  }
}
