# AirsSpec Configuration Example
# Copy to: .airsspec/airsspec.toml

[project]
name = "project-name"
version = "0.1.0"
description = "Project description"

[sources]
# Directories to scan for source files
paths = [
    "docs/",
    "specs/",
]

[knowledge]
# Knowledge base configuration
library_path = "knowledge/library/"
playbooks_path = "knowledge/playbooks/"
vectors_path = "knowledge/vectors/"

[agents]
# Default agent settings
default_model = "claude-3-5-sonnet"
temperature = 0.7

[phases]
# Phase-specific settings
[phases.research]
enabled = true

[phases.inception]
enabled = true

[phases.design]
enabled = true

[phases.planning]
enabled = true

[phases.construction]
enabled = true
