{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Requirements Artifact Schema",
  "description": "Schema for validating Requirements artifact frontmatter",
  "type": "object",
  "required": ["id", "title", "version", "status", "author", "created_at", "priority", "phase"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the requirements document (e.g., UOW-001)"
    },
    "title": {
      "type": "string",
      "description": "Title of the requirements document"
    },
    "version": {
      "type": "string",
      "description": "Version of the requirements document (e.g., '1.0')"
    },
    "status": {
      "type": "string",
      "description": "Status of the requirements (draft, approved, deprecated)",
      "enum": ["draft", "approved", "deprecated"]
    },
    "author": {
      "type": "string",
      "description": "Author who created the requirements"
    },
    "created_at": {
      "type": "string",
      "description": "Creation date in ISO 8601 format (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "priority": {
      "type": "string",
      "description": "Priority level of the requirements",
      "enum": ["low", "medium", "high", "critical"]
    },
    "phase": {
      "type": "string",
      "description": "Phase of the AI-DLC (Research, Inception, Design, Planning, Construction)",
      "enum": ["Research", "Inception", "Design", "Planning", "Construction"]
    },
    "uow_ref": {
      "type": "string",
      "description": "Reference to the parent Unit of Work (optional)"
    }
  }
}
