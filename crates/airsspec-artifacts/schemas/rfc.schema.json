{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RFC Artifact Schema",
  "description": "Schema for validating Request for Comments artifact frontmatter",
  "type": "object",
  "required": ["id", "title", "version", "status", "author", "created_at", "uow_ref"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the RFC (e.g., RFC-UOW-001)"
    },
    "title": {
      "type": "string",
      "description": "Title of the RFC"
    },
    "version": {
      "type": "string",
      "description": "Version of the RFC (e.g., '1.0')"
    },
    "status": {
      "type": "string",
      "description": "Status of the RFC (draft, approved, rejected)",
      "enum": ["draft", "approved", "rejected"]
    },
    "author": {
      "type": "string",
      "description": "Author who created the RFC"
    },
    "created_at": {
      "type": "string",
      "description": "Creation date in ISO 8601 format (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "uow_ref": {
      "type": "string",
      "description": "Reference to the parent Unit of Work"
    },
    "approved_at": {
      "type": "string",
      "description": "Approval date in ISO 8601 format (optional, YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
